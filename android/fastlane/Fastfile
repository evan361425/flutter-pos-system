# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:android)

platform :android do
  desc "Test locally"
  lane :test do
    sh "flutter build appbundle -v --flavor dev"

    upload_to_play_store(
      track: 'internal',
      aab: '../build/app/outputs/bundle/devRelease/app-dev-release.aab',
      skip_upload_screenshots: true,
      validate_only: true,
      json_key: "fastlane-keys.json",
    )
  end

  desc "Submit a new Internal Build to Play Store"
  lane :internal do
    sh "flutter build appbundle -v --flavor dev --dart-define=app.flavor=dev"

    changelog_from_git_commits

    upload_to_play_store(
      track: 'internal',
      rollout: '1',
      aab: '../build/app/outputs/bundle/devRelease/app-dev-release.aab',
      skip_upload_screenshots: true,
      json_key_data: ENV['PLAY_STORE_CONFIG_JSON'],
    )
  end

  desc "Submit a new Beta Build to Crashlytics Beta"
  lane :beta do
    sh "flutter build appbundle -v --flavor prod"

    upload_to_play_store(
      track: 'beta',
      aab: '../build/app/outputs/bundle/prodRelease/app-prod-release.aab',
      json_key_data: ENV['PLAY_STORE_CONFIG_JSON'],
    )
  end

  desc "Promote beta track to prod"
  lane :promote_to_production do
    upload_to_play_store(
      track: 'beta',
      track_promote_to: 'production',
      json_key_data: ENV['PLAY_STORE_CONFIG_JSON'],
      version_code: ENV['VERSION_CODE'],
    )
  end

  desc "Submit a new production build to Google Play"
  lane :production do
    sh "flutter build appbundle -v --flavor prod"
    upload_to_play_store(
      track: 'production',
      aab: '../build/app/outputs/bundle/prodRelease/app-prod-release.aab',
      json_key_data: ENV['PLAY_STORE_CONFIG_JSON'],
      version_code: ENV['VERSION_CODE'],
    )
  end
end
